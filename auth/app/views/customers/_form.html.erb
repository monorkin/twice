<%= form_for customer, html: { class: "flex flex-col gap-6" } do |form| %>
  <div>
    <div>
      <%= form.label :email_address, class: "font-semibold" %>
      <%= form.email_field :email_address, class: "border border-gray-400 rounded p-2 w-full", placeholder: "nemo@example.com" %>
      <% if form.object.errors[:email_address].any? %>
        <div class="text-red-500">
          <%= form.object.errors[:email_address].join(", ") %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex flex-row justify-end">
    <%= form.submit "Save", class: "p-2 bg-black text-white rounded cursor-pointer" %>
  </div>
<% end %>
