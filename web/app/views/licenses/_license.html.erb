<div id="<%= dom_id(license) %>" class="relative flex flex-row gap-6 p-2 border border-gray-400 border-t-0 first:border-t first:rounded-t-md last:rounded-b-md">
  <div class="flex flex-col gap-2 flex-grow">
    <div class="font-semibold">
      <%= license.product.name %>
    </div>
    <div class="text-gray-500">
      <%= license.key %>
    </div>
  </div>

  <div class="flex flex-col gap-2">
    <div class="font-semibold">
      Purchased
    </div>
    <div class="text-gray-500">
      <%= l license.created_at %>
    </div>
  </div>

  <div class="flex flex-col gap-2 items-center justify-center">
    <%= button_to "Revoke", customer_license_path(customer_id: license.owner_id, id: license.id), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "p-2 bg-black text-white rounded cursor-pointer" %>
  </div>
</div>
